
VAGRANTFILE_API_VERSION = "2"
Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.hostname = "ubuntu-rancher-host"
  config.vm.network "private_network", ip: "192.168.50.4"

  config.vm.provision "shell", path: "install_scripts/prepareHost.sh"
  config.vm.provision "shell", path: "install_scripts/installDocker.sh"
  config.vm.provision "shell", path: "install_scripts/startRancher.sh"
  config.vm.provider "virtualbox" do |vm|
    vm.name = "ubuntu-rancher-host"
    vm.gui = false
    vm.memory = 1024
    vm.cpus = 2
  end
end
